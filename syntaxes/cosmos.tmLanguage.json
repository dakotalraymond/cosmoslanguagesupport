{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "COSMOS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#other"
		},
		{
			"include": "#constant"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cosmos",
				"match": "\\b(INT|UINT|FLOAT|STRING|BLOCK|DERIVED)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.cosmos",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cosmos",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"name": "comment.line.number-sign.cosmos",
			"begin": "(?<!/)#(?:(?!/)|(?=#))",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.cosmos"
				}
			},
			"end": "(?=$)"
		},
		"storage": {
			"name": "storage.cosmos",
			"match": "\\b(TELEMETRY|COMMAND)\\b"
		},
		"other": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(APPEND_ITEM|APPEND_ID_ITEM|APPEND_ARRAY_ITEM|APPEND_ID_PARAMETER|APPEND_PARAMETER)\\b"	
			}]
		},
		"constant": {
			"patterns": [{
				"name": "constant.language",
				"match": "\\b(TRUE|FALSE)\\b"
			}]
		}
	},
	"scopeName": "source.cosmos"
}